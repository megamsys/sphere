.clearfix
  .organisation-fields
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :phone_general
      = f.text_field :phone_general
    .field
      = f.label :phone_reservations
      = f.text_field :phone_reservations
    .field
      = label_tag(:addresspicker, t('.address'), class: 'required')
      = text_field_tag(:addresspicker, nil, placeholder: t('.search_address'))
    .auto-address-fields
      = link_to('', 'javascript:;', id: 'edit-auto-address-fields', class: 'icon icon-edit action-button', title: t('.edit_address'))
      .field
        = f.label :route
        = f.text_field :route, readonly: false, class: "addresspicker-route"
      .field
        = f.label :street_number
        = f.text_field :street_number, readonly: false, class: "addresspicker-street-number"
      .field
        = f.label :locality
        = f.text_field :locality, readonly: false, class: "addresspicker-locality"
      .field
        = f.label :administrative_area_level_2
        = f.text_field :administrative_area_level_2, readonly: false, class: "addresspicker-administrative-area-level-2"
      .field
        = f.label :administrative_area_level_1
        = f.text_field :administrative_area_level_1, readonly: false, class: "addresspicker-administrative-area-level-1"
      .field
        = f.label :postal_code
        = f.text_field :postal_code, readonly: false, class: "addresspicker-postal-code"
      .field
        = f.label :country
        = f.text_field :country, readonly: false, class: "addresspicker-country"
      = f.hidden_field :address_type, class: "addresspicker-address-type"
      = f.hidden_field :lng, class: "addresspicker-lng"
      = f.hidden_field :lat, class: "addresspicker-lat"

  #addresspicker-map.address-map
    img.ajax-wait
